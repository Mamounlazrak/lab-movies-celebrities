<h2>Movie details</h2>
<p>{{title}}</p>
<p>{{genre}}</p>
<p>{{plot}}</p>
{{#each cast}}
    <p>{{this.name}}</p>
    <p>{{this.occupation}}</p>
    <p>{{this.catchPhrase}}</p>
{{/each}}
<a href="/movies/{{_id}}/edit">Edit</a>
<form action="{{id}}/delete" method="post">
<button>Delete movie</button>
</form>